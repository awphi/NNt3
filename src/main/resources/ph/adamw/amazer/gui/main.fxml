<BorderPane fx:id="borderPane" prefHeight="760.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.adamw.amazer.gui.MainGuiController">
   <left>
      <VBox prefHeight="400.0" prefWidth="260.0" style="-fx-alignment: top-center;" BorderPane.alignment="CENTER">
         <children>
      <Label alignment="CENTER" minWidth="60.0" style="-fx-alignment: center;" text="Current Generation" textAlignment="CENTER">
        <font>
          <Font size="18.0" />
        </font>
        <textFill>
          <Color blue="0.624" green="0.624" red="0.624" />
        </textFill>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
      </Label>
            <ListView fx:id="mazerListView" onMouseClicked="#onMazerListClicked" prefHeight="1000000.0" prefWidth="260.0" />
         </children>
         <BorderPane.margin>
            <Insets left="20.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="evolutionControlsBox" prefHeight="100.0" prefWidth="539.0" style="-fx-alignment: center;">
               <children>
                  <HBox fx:id="genZeroConfigBox" prefHeight="100.0" prefWidth="200.0" style="-fx-alignment: center;">
                     <children>
                        <TextField fx:id="generationSizeField" promptText="Generation Size">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </TextField>
                        <TextField fx:id="hiddenLayersAmountField" promptText="Hidden Layers">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </TextField>
                        <TextField fx:id="hiddenLayersSizeField" promptText="Hidden Layers Size" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="544.0" style="-fx-alignment: center;">
                     <children>
                        <Button fx:id="nextGenButton" mnemonicParsing="false" onAction="#onNextGenPressed" text="Run Generation 0">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="skipGenerationsButton" disable="true" mnemonicParsing="false" onAction="#onSkipGensPressed" text="Skip 100 Generations">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </Button>
                        <Slider fx:id="skipGenerationsSlider" disable="true" majorTickUnit="100.0" max="500.0" minorTickCount="50" prefHeight="38.0" prefWidth="222.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="100.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <VBox fx:id="gridSizeControlsBox" prefHeight="200.0" prefWidth="347.0" style="-fx-alignment: center;">
               <children>
                  <HBox prefHeight="100.0" prefWidth="520.0" style="-fx-alignment: center;">
                     <children>
                        <TextField fx:id="gridColsField" promptText="Grid Columns">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin></TextField>
                        <TextField fx:id="gridRowsField" promptText="Grid Rows" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#onUpdateGridPressed" text="Update Grid" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <HBox fillHeight="false" prefHeight="20.0" prefWidth="200.0" style="-fx-background-color: rgba(0,0,0,0.1);" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onExportMazePressed" text="Export Maze">
               <HBox.margin>
                  <Insets right="4.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onImportMazePressed" text="Import Maze" />
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding></HBox>
   </top>
</BorderPane>

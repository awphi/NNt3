<BorderPane fx:id="borderPane" prefHeight="760.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.adamw.nnt3.gui.GuiController">
   <left>
      <VBox prefHeight="400.0" prefWidth="260.0" style="-fx-alignment: top-center;" BorderPane.alignment="CENTER">
         <children>
      <Label alignment="CENTER" minWidth="60.0" prefWidth="-1.0" style="-fx-alignment: center;" text="Neural Networks" textAlignment="CENTER" wrapText="false">
        <font>
          <Font size="18.0" fx:id="x1" />
        </font>
        <textFill>
          <Color blue="0.624" green="0.624" red="0.624" fx:id="x2" />
        </textFill>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
      </Label>
            <ListView fx:id="mazerListView" onMouseClicked="#mazerListViewClicked" prefHeight="560.0" prefWidth="260.0" />
         </children>
      </VBox>
   </left>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="evolutionControlsBox" prefHeight="100.0" prefWidth="520.0" style="-fx-alignment: center;">
               <children>
                  <HBox fx:id="genZeroConfigBox" prefHeight="100.0" prefWidth="200.0" style="-fx-alignment: center;">
                     <children>
                        <TextField fx:id="generationSizeField" promptText="Generation Size">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </TextField>
                        <TextField fx:id="hiddenLayersAmountField" promptText="Hidden Layers">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin>
                        </TextField>
                        <TextField fx:id="hiddenLayersSizeField" promptText="Hidden Layers Size" />
                     </children>
                  </HBox>
                  <Button fx:id="nextGenButton" mnemonicParsing="false" onAction="#onNextGenPressed" text="Run Generation 0" />
               </children>
            </VBox>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <VBox prefHeight="200.0" prefWidth="347.0" style="-fx-alignment: center;">
               <children>
                  <HBox prefHeight="100.0" prefWidth="520.0" style="-fx-alignment: center;">
                     <children>
                        <TextField fx:id="gridColsField" promptText="Grid Columns">
                           <HBox.margin>
                              <Insets right="4.0" />
                           </HBox.margin></TextField>
                        <TextField fx:id="gridRowsField" promptText="Grid Rows" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#onUpdateGridPress" text="Update Grid" />
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
